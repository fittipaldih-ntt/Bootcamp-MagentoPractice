<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="nttdata_company_employee" resource="default" engine="innodb" comment="Employee Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name employee"/>
        <column xsi:type="varchar" name="lastName" nullable="false" length="255" comment="Last name employee"/>
        <column xsi:type="date" name="birthDate" nullable="true" comment="Birth employee"/>
        <column xsi:type="int" name="id_typeEmployee" unsigned="true" nullable="false" comment="Type employee id"/>
        <column xsi:type="int" name="id_sectorEmployee" unsigned="true" nullable="false" comment="Sector employee id"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="FK_NTTDATA_EMPLOYEE_TYPE_EMPLOYEE" table="nttdata_company_employee"
                    column="id_typeEmployee" referenceTable="nttdata_company_type_employee" referenceColumn="id"
                    onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="FK_NTTDATA_EMPLOYEE_SECTOR_EMPLOYEE"
                    table="nttdata_company_employee" column="id_sectorEmployee"
                    referenceTable="nttdata_company_sector_employee" referenceColumn="id" onDelete="CASCADE"/>
    </table>

    <table name="nttdata_company_type_employee" resource="default" engine="innodb" comment="Type Employee Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="description" nullable="true" length="255" comment="Description type employee"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>

    <table name="nttdata_company_sector_employee" resource="default" engine="innodb" comment="Sector Employee Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="description" nullable="true" length="255"
                comment="Programming Language or Type of design"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
